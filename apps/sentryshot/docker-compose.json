{
  "$schema": "../dynamic-compose-schema.json",
  "services": [
    {
      "isMain": true,
      "image": "codeberg.org/sentryshot/sentryshot:v0.3.6",
      "name": "sentryshot",
      "internalPort": 2020,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/sentryshot/configs",
          "containerPath": "/app/configs"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media/data/NVR/sentryshot/storage",
          "containerPath": "/app/storage"
        }		
      ]
    }
  ]
}